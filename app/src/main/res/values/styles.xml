<resources>

    <style name="Widget.TextView.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.TextView.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 去掉背景缓存 -->
        <item name="android:colorBackgroundCacheHint">@color/transparent_0</item>
        <item name="android:windowContentOverlay">@color/transparent_0</item>
        <item name="android:background">@color/transparent_0</item>
        <item name="android:statusBarColor">@color/transparent_0</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@style/NoAnim</item>
<!--        禁用多点触控-->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NoAnim">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 去掉背景缓存 -->
        <item name="android:colorBackgroundCacheHint">@color/transparent_0</item>
        <item name="android:windowContentOverlay">@color/transparent_0</item>
        <item name="android:background">@color/transparent_0</item>
        <item name="android:statusBarColor">@color/transparent_0</item>
        <item name="android:windowBackground">@color/transparent_0</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@style/NoAnim</item>
        <!--禁用多点触控-->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>