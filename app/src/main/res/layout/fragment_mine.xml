<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <com.example.custom.view.MyTextView
        android:id="@+id/video_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试点击"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/video_view"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.example.custom.view.MyTextView
        android:id="@+id/video_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="序列化储存"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/video_text"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.example.custom.view.MyTextView
        android:id="@+id/video_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="序列化读取"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/video_text2"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.example.custom.view.MyTextView
        android:id="@+id/video_web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="webView测试"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/video_text3"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.example.custom.view.MyTextView
        android:id="@+id/notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="前台服务"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/video_web_view"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.example.custom.view.MyTextView
        android:id="@+id/startService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务端连接"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/notify"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.example.custom.view.MyTextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务端登录"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/startService"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/video_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/video_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>